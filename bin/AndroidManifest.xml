<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.translert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />	
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.translert.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.translert.StationSelectorActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.translert.TripOverviewActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.translert.InterimActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.translert.WatchActivity"
            android:label="@string/app_name" android:launchMode="singleInstance"/>
        <service 
            android:name="com.translert.TimerService"/>
        
        
        <activity
            android:name="com.translert.activity.BusTrainSelectorActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.translert.activity.BusEnterNumberActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.translert.activity.BusEnterDestinationActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.translert.activity.BusProcessingActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.translert.activity.BusProgressActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.translert.activity.BusAlertActivity"
            android:label="@string/app_name"
            android:theme ="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
        <service
            android:name="com.translert.bus.ProcessingIntentService"/>
        
        
        
    </application>

</manifest>
